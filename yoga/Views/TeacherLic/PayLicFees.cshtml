@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@model yoga.ViewModels.TechearMemberShipVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="border p-3 mt-4">
    <form method="post" enctype="multipart/form-data">

        @if (ViewData["Saved"] != null)
        {
            <div class="alert alert-success">@ViewData["Saved"]</div>
            <div><a asp-controller="Account" asp-action="UserProfile">Go to Your profile to see the licence status</a></div>
        }

        <h2>Pay Licence Fees</h2>
        <div class="alert alert-info">
            Please Send Licence Fees to the below bank account
            <p>IBAN: SA5865000000101459418001</p>
            <p>Amount: </p>
            <p>
                @if(@Model != null)
                {
                    <span>@Model.LicenseFeesPrice SAR</span>
                }
            </p>
        </div>
        <div class="alert alert-danger"><span class="fw-bold">@localizer["BillNoteTitle"]</span> @localizer["BillNote"]
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label>Receit</label>
            <input type="file" name="Receit" class="form-control" />
        </div>
        <div class="mb-3">
            <input type="hidden" value='@(ViewContext.RouteData.Values["Id"])' name="TestId">
            <button class="btn btn-success" >Submit</button>
        </div>

    </form>

</div>


@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}