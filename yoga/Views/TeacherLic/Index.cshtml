@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@model IEnumerable<TechearMemberShip>
@{
    ViewData["Title"] ="Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/assets/css/account-details.css" rel="stylesheet">

<div class="d-lg-flex">
                <partial name="_AdminMenu" />
                <div class="account-container account-details">
                    <h2 class="header page-header">@localizer["PageTitle"]</h2>
                    <a asp-controller="TeacherLic" asp-action="ExportToExcel">@localizer["Export"]</a>

					<div class="table-responsive">
							        <table class="table app-table-hover mb-0 text-left">
										<thead>
											<tr>
                                                <th>@localizer["UserName"]</th>
                                                <th>@localizer["ExpYears"]</th>
                                                <th>@localizer["AccreditedHours"]</th>
                                                <th>@localizer["TeachingType"]</th>
                                                <th>@localizer["PayFees"]</th>
                                                <th>@localizer["Status"]</th>
                                                <th>@localizer["Actions"]</th>
											</tr>
										</thead>
										<tbody>
											@* <tr>
												<td class="cell">#15346</td>
												<td class="cell"><span class="truncate">Lorem ipsum dolor sit amet eget volutpat erat</span></td>
												<td class="cell">John Sanders</td>
												<td class="cell"><span>17 Oct</span><span class="note">2:16 PM</span></td>
												<td class="cell"><span class="badge bg-success">Paid</span></td>
												<td class="cell">$259.35</td>
												<td class="cell"><a class="btn-sm app-btn-secondary" href="#">View</a></td>
											</tr> *@
                                    @foreach (var item in Model)
                                    {
                                                <tr>
                                                    <td class="cell">
                                                @item.AppUser.FirstName  @item.AppUser.MiddleName @item.AppUser.LastName
                                                    </td>
                                                    <td class="cell">
                                                @item.ExpYears
                                                    </td>
                                                    <td class="cell">
                                                @item.AccreditedHours
                                                    </td>
                                                    <td class="cell">
                                                @item.TeachingType
                                                    </td>
                                            @if (@item.PayFees == false)
                                            {
                                                        <td class="cell">No</td>
                                            }
                                            else
                                            {
                                                        <td class="cell">Yes</td>
                                            }
                                            @if (@item.FinalApprove)
                                            {
                                                        <td class="cell"> <span class="badge bg-success">Approved</span> </td>
                                            }
                                            else
                                            {
                                                        <td class="cell"> <span class="badge bg-info">Pending</span> </td>
                                            }

                                            @* @if(@item.Status == 0)
                                                {
                                                <td>
                                                <button class="btn btn-info">Approve</button>
                                                |
                                                <button class="btn btn-danger">Reject</button>
                                                </td>
                                                }
                                                else {
                                                <td>
                                                <button class="btn btn-info">Approve</button>
                                                </td>
                                                } *@
                                                    <td>
                                                        <div class="w-75 btn-group" role="group">
                                                            <a class="btn-sm app-btn-secondary" asp-controller="TeacherLic" asp-action="Detail"
                                                            asp-route-id="@item.MemId"><i class="fa-solid fa-memo-circle-info"></i>@localizer["Details"]</a>
                                                        </div>
                                                    </td>

                                                </tr>
                                    }
		
										</tbody>
									</table>
						        </div><!--//table-responsive-->
                </div>
</div>