@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@using System.Net
@model yoga.ViewModels.UserSetting;
@{
    ViewData["Title"] = "My Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@inject UserManager<AppUser> userManager
@{
    var user = await userManager.GetUserAsync(User);
    var displayName = $"{user.FirstName} {user.MiddleName} { user.LastName}";
    var userName = user.FirstName;
    var email = user.Email;
    var Phone = user.PhoneNumber;
    var imagePath = user.UserImage;
    var nationalId = user.NationalId;
}
<link href="~/assets/css/account-details.css" rel="stylesheet">






<div class="d-lg-flex">
    <partial name="_AdminMenu" />
    <div class="account-container account-details">
        <h2 class="header page-header">@localizer["PageTitle"]</h2>
        <div class="d-flex align-items-center">
            <img src="~/assets/images/accountdetails/dashboard/user.png" />
            @if(@nationalId == "11")
            {
                <p class="title">@userName</p>
            }
            else {
                <p class="title">@displayName</p>
            }
            
        </div>
        <h2 class="header"> </h2>
        <div class="d-flex align-items-center">
            <img src="~/assets/images/accountdetails/dashboard/mail.png" />
            <p class="title">@email</p>
        </div>
        @if(nationalId !="11")
        {
            <div class="d-flex align-items-center">
                <img src="~/assets/images/accountdetails/dashboard/phone.png" />
                <p class="title">@Phone</p>
            </div>
        }
        @if(nationalId != "11")
        {
            <div class="d-flex align-items-center">
                <img src="~/assets/images/accountdetails/dashboard/id-card.png" />
                <p class="title">@nationalId</p>
            </div>
        }

        @if(nationalId == "11")
        { 
            <div>
                <a asp-controller="Account" asp-action="EditUser" class="btn btn-darker-brown-primary">Edit</a>
            </div>
         } 
        
    </div>
    @if(nationalId != "11")
    {
        <div class="account-container w-100">
        <h2 class="header page-header">@localizer["Subscriptions"]</h2>
        <div class="page-desc">
            @if (Model.User_Subscribtions.HasMemberShip == false && Model.User_Subscribtions.HasTeacherLic == false)
            {
                <p>@localizer["YoHaveNo"]</p>
            }
        </div>
        <div>@localizer["LicTitle"]</div>
        <table class="table">
            <thead>
                <tr>
                    <th>@localizer["Plan"]</th>
                    <th>@localizer["IssueDate"]</th>
                    <th>@localizer["Expires"]</th>
                    <th>@localizer["Status"]</th>
                    <th>@localizer["Download"]</th>
                </tr>
            </thead>
            <tbody>
                @if(Model.User_Subscribtions.HasTeacherLic)
                {
                    @foreach (var item in Model.TeacherLic.TechearMemberShipTests)
                    {
                        <tr>
                            <td>@item.TeachingType_String</td>
                            <td>@Model.TeacherLic.CreationDate</td>
                            <td>@item.ExpireDate</td>
                            @if (@item.FinalApprove)
                            {
                                <td class="col approved">@localizer["Active"]</td>
                            }
                            else
                            {
                                <td class="col pending">@localizer["Not Active"]</td>
                            }
                            <td>
                                <a target="_blank" href="~/assets/techer_licnese@(Model.TeacherLic.Serial).pdf">@localizer["Download"]</a>
                            </td>
                        </tr>
                    }
                    
                }
                @if(Model.User_Subscribtions.HasMemberShip)
                {
                    <tr>
                    <td>@localizer["MembershipCard"]</td>
                    <td>@Model.MemshipCard.IssueDate</td>
                    <td>@Model.MemshipCard.ExpireDate</td>
                   @if (Model.MemshipCard.Active.Value)
                    {
                        <td class="col approved">@localizer["Active"]</td>
                    }
                    else
                    {
                        <td class="col pending">@localizer["NotActive"]</td>
                    }
                    <td>
                        @if(Model.MemshipCard.Active.Value)
                        {
                            <a target="_blank" href="~/assets/MemberShip_Card@(Model.MemshipCard.Serial).pdf">@localizer["Download"]</a>
                        }
                    </td>
                    </tr>
                }
            </tbody>
        </table>
        
    </div>
    }
</div>