@model yoga.ViewModels.UserSetting;
@{
	ViewData["Title"] = "My Account";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/assets/css/account-details.css" rel="stylesheet">

<h1>User Profile</h1>
<div class="d-lg-flex">
               
                
            </div>
			
<div class="app-card alert shadow-sm mb-4 border-left-decoration" role="alert">
	<div class="inner">
		
		<!--//app-card-body-->
	<div class="row g-4 mb-4">
		@if(Model.User_Subscribtions.HasTeacherLic)
		{
			<h4>Your Teacher Licence Status</h4>
			<div class="col-6 col-lg-3">
					    <div class="app-card app-card-stat shadow-sm h-100">
						    <div class="app-card-body p-3 p-lg-4">
							    <h4 class="stats-type mb-1">Information Status</h4>
							    <div>
									@if(Model.TeacherLic.Status == (int)StatusEnum.Approved)
									{
										<span class="badge bg-success">Approved</span>
										<div>
											@if(Model.TeacherLic.PayExamFees == false)
											{
												<a class="btn btn-success" asp-controller="TeacherLic" asp-action="payexamfees">Pay The Exam Fees</a>
											}
										</div>
									}
									else {
										<span class="badge bg-info">Pending</span>
										<div>We are reviewing your information.</div>
									}
								</div>
							    <div class="stats-meta text-success">
								    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-up" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/>
</svg> </div>
						    </div><!--//app-card-body-->
						    
					    </div><!--//app-card-->
				    </div><!--//col-->
				    
				    <div class="col-6 col-lg-3">
					    <div class="app-card app-card-stat shadow-sm h-100">
						    <div class="app-card-body p-3 p-lg-4">
							    <h4 class="stats-type mb-1">Fees</h4>
							    <div>
									<p>
										<span><b>Exam Fees</b></span>
									</p>
									@if(Model.TeacherLic.PayExamFees)
									{
										<span class="badge bg-success">Paid</span>
									}
									else {
										<span class="badge bg-danger">Not Paid</span>
									}
								</div>
								<div class="stats-meta text-success">
								    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-up" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/>
</svg>  </div>
								<div>
									<p>
										<span><b>Licence Fees</b></span>
									</p>
									@if(Model.TeacherLic.PayFees)
									{
										<span class="badge bg-success">Paid</span>
									}
									else {
										<span class="badge bg-danger">Not Paid</span>
									}
								</div>
							    <div class="stats-meta text-success">
								    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-up" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/>
</svg>  </div>
						    </div><!--//app-card-body-->
						    
					    </div><!--//app-card-->
				    </div><!--//col-->
				    <div class="col-6 col-lg-3">
					    <div class="app-card app-card-stat shadow-sm h-100">
						    <div class="app-card-body p-3 p-lg-4">
							    <h4 class="stats-type mb-1">Exam Taken</h4>
							    <div>
									@if(Model.TeacherLic.TakeExam)
									{
										<span class="badge bg-success">Done</span>
									}
									else {
										<span class="badge bg-danger">Not Yet</span>
									}
								</div>
							    <div class="stats-meta">
								    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-up" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/>
</svg></div>
						    </div><!--//app-card-body-->
						    <a class="app-card-link-mask" href="#"></a>
					    </div><!--//app-card-->
				    </div><!--//col-->
				    <div class="col-6 col-lg-3">
					    <div class="app-card app-card-stat shadow-sm h-100">
						    <div class="app-card-body p-3 p-lg-4">
							    <h4 class="stats-type mb-1">Pass The Exam</h4>
							    <div>
									@if(Model.TeacherLic.PassExam)
									{
										<span class="badge bg-success">Congratiolation, You have passed the exam</span>
										@if(Model.TeacherLic.PayFees == false)
										{
														<div>
															<a class="btn btn-success" asp-action="PayLicFees" asp-controller="TeacherLic">Pay Licence Fees</a>
														</div>
										}
									}
									else {
										<span class="badge bg-danger">Not Yet</span>
									}
								</div>
							    <div class="stats-meta"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-up" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/>
</svg></div>
						    </div><!--//app-card-body-->
						    
					    </div><!--//app-card-->
				    </div><!--//col-->
		}
	</div>
	<!--//row-->
	</div>
	<!--//inner-->
</div>
