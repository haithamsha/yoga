@model yoga.ViewModels.UserSetting;
@{
	ViewData["Title"] = "My Account";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/assets/css/account-details.css" rel="stylesheet">

<h1>Licence Details</h1>
<div class="d-lg-flex">


</div>

<div class="app-card alert shadow-sm mb-4 border-left-decoration" role="alert">
	<div class="inner">

		<!--//app-card-body-->
		<div class="row g-4 mb-4">
			@if (Model.User_Subscribtions.HasTeacherLic)
			{
				<h4>Your Teacher Licence Status</h4>
				<div class="col-6 col-lg-3">
					<div class="app-card app-card-stat shadow-sm h-100">
						<div class="app-card-body p-3 p-lg-4">
							<h4 class="stats-type mb-1">Information Status</h4>


							<div>
								@if (Model.TeacherLic.Status == (int)StatusEnum.Approved)
								{
									<span class="badge bg-success">Approved</span>
									

								}
								else if (Model.TeacherLic.Status == (int)StatusEnum.Pending)
								{
									<span class="badge bg-info">Pending</span>
									<div class="stats-meta text-success">
										
									</div>
									<div>We are reviewing your information.</div>
								}
								else
								{
									<span class="badge bg-danger">Rejected</span>
									<div class="stats-meta text-success">
										
									</div>
									<div><b>Unfortunately</b>, Your information Rejected, Please Review Your Information
									
										<a class="btn btn-danger" asp-controller="TeacherLic" asp-route-id='@ViewContext.RouteData.Values["Id"]' asp-action="Edit">here</a>
									</div>
								}
							</div>
						</div>
						<div>
							@if(!string.IsNullOrEmpty(Model.TeacherLic.RejectReason))
							{
								<div><span class="text-danger">Last Reject Reason: </span> @Model.TeacherLic.RejectReason</div>
							}
						</div>
						<!--//app-card-body-->

				</div>
					<!--//app-card-->
			</div>
				<!--//col-->

				<div class="col-6 col-lg-3">
					<div class="app-card app-card-stat shadow-sm h-100">
						<div class="app-card-body p-3 p-lg-4">
							<h4 class="stats-type mb-1">Fees</h4>
							<div>
								<p>
									<span><b>Exam Fees</b></span>
								</p>
								@if (Model.TeacherLic.PayExamFees)
								{
									<span class="badge bg-success">Paid</span>
								}
								else
								{
									@if(string.IsNullOrEmpty(Model.TeacherLic.ReceiptCopy))
									{
										<span class="badge bg-danger">Not Paid</span>
									}
									else {
										<span class="badge bg-info">Pending, We are reviewing your payment</span>
									}
								}
							</div>
							<div class="stats-meta text-success">
								
							</div>
							<div>
								<p>
									<span><b>Licence Fees</b></span>
								</p>
								@if (Model.TeacherLic.PayFees)
								{
									<span class="badge bg-success">Paid</span>
								}
								else
								{
									@if(string.IsNullOrEmpty(Model.TeacherLic.ReceiptCopyLic))
									{
										<span class="badge bg-danger">Not Paid</span>
									}
									else {
										<span class="badge bg-info">Pending, We are reviewing your payment</span>
									}
								}
							</div>

							<div class="stats-meta text-success">
								
							</div>
						</div>
						<!--//app-card-body-->
					<div>
							@if (Model.TeacherLic.Status == (int)StatusEnum.Approved)
							{
								@if (Model.TeacherLic.PayExamFees == false && string.IsNullOrEmpty(Model.TeacherLic.ReceiptCopy))
								{
									<a class="btn btn-success" asp-controller="TeacherLic" asp-action="payexamfees" asp-route-id='@ViewContext.RouteData.Values["Id"]'>Pay The Exam
										Fees</a>
								}
							}
						</div>
					</div>
					<!--//app-card-->
			</div>
				<!--//col-->
				<div class="col-6 col-lg-3">
					<div class="app-card app-card-stat shadow-sm h-100">
						<div class="app-card-body p-3 p-lg-4">
							<h4 class="stats-type mb-1">Exam Taken</h4>
							<div>
								@if (Model.TeacherLic.TakeExam)
								{
									<span class="badge bg-success">Done</span>
								}
								else
								{
									<span class="badge bg-danger">Not Yet</span>
									@if(Model.TeacherLic.PayExamFees)
									{
										<div><b>Exam Details:</b> </div>
										<p>
											
											@Model.TeacherLic.ExamLocation
										</p>
									}
								}
							</div>
							<div class="stats-meta">
								
							</div>
						</div>
						<!--//app-card-body-->
					<a class="app-card-link-mask" href="#"></a>
					</div>
					<!--//app-card-->
			</div>
				<!--//col-->
				<div class="col-6 col-lg-3">
					<div class="app-card app-card-stat shadow-sm h-100">
						<div class="app-card-body p-3 p-lg-4">
							<h4 class="stats-type mb-1">Pass The Exam</h4>
							<div>
								@if (Model.TeacherLic.PassExam)
								{
									<span class="badge bg-success">Congratiolation, You have passed the exam</span>
									@if (Model.TeacherLic.PayFees == false && string.IsNullOrEmpty(Model.TeacherLic.ReceiptCopyLic))
									{
										<div>
											<a class="btn btn-success" asp-action="PayLicFees" asp-controller="TeacherLic" asp-route-id='@ViewContext.RouteData.Values["Id"]'>Pay
												License Fees</a>
										</div>
									}
								}
								else
								{
									<span class="badge bg-danger">Not Yet</span>
								}
							</div>
							<div class="stats-meta"></div>
						</div>
						<!--//app-card-body-->

				</div>
					<!--//app-card-->
			</div>
				<!--//col-->
			}
		</div>
		<!--//row-->
	</div>
	<!--//inner-->
</div>
<!--//app-card-->
<div class="app-card-body p-3 p-lg-4">
	@* <h3 class="mb-3">Welcome To Yoga Saudi Committee.</h3> *@

	<div class="row gx-5 gy-3">
		@if (Model.User_Subscribtions.HasMemberShip && !User.IsInRole("Admin"))
		{
			<h4>Your Member Card Status</h4>
			<div>
				@if (Model.MemshipCard.Status == (int)StatusEnum.Pending)
				{
					<strong>Status: </strong> <span class="badge bg-info">Pending</span>
				}
				else if (Model.MemshipCard.Status == (int)StatusEnum.Approved)
				{
					<strong>Status: </strong> <span class="badge bg-success">Approved</span>
				}
				else
				{
					<strong>Status: </strong> <span class="badge bg-danger">Rejected</span>
					<a class="btn btn-primary" asp-controller="MembershipCard" asp-action="Create" asp-route-id="@Model.MemshipCard.Id" >Re Submit</a>
				}
			</div>
		}

		

	</div>
	



</div>


<partial name="_AdminMenu" />