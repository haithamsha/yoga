@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    var culture = Context.Features.Get<Microsoft.AspNetCore.Localization.IRequestCultureFeature>();
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/assets/css/platform.css" rel="stylesheet">

@* <div class="yog-layout"> *@


<div id="platform-page-container">
    <div id="platform-page">
        <div class="platform-page-content container order-1">
            @* <a type="button" class="btn btn-brown-outline ">@localizer["AboutUsTitle"]</a> *@
            <div class="platform-page-title">@localizer["WhoWeAre"]</div>
            <div class="platform-page-desc">
                @localizer["AboutUsBody"]
            </div>
        </div>
        <img src="~/assets/images/platform/about-us.png" class="order-0">
    </div>
</div>
<div id="objective-desktop-container">
    <div id="objective-container">
        <div class="container">

            <div class="d-flex flex-column flex-lg-row align-items-center justify-content-center">
                <div class="col-lg-4">
                    <img src="~/assets/images/platform/platform-advantages.png" />
                </div>
                <div class="objective-content">
                    <a class="btn btn-white-outline">@localizer["VisitonMissionTitle"]</a>
                    <h3 class="objective-title">@localizer["OurObjectiveTitle"]</h3>
                    <p class="objective-desc">@localizer["OurObjectiveBody"]</p>
                </div>
            </div>

        </div>
    </div>
</div>




