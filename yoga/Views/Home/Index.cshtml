                                    </ul> <!-- end features-list -->
                                </div> <!-- end left-features-service -->
                            </div><!--  end col-md-3 -->

                            <div class="col-md-6">
                                <div class="features-image animated out" data-animation="fadeInUp" data-delay="0">
                                    <img src="~/assets/images/serv.jpg" alt="">
                                </div> <!-- end features-image -->
                            </div> <!-- end col-md-6 -->

                            <div class="col-md-3 without-padding">
                                <div class="right-features-services">
                                    <ul class="features-list">
                                        <!-- feature -->
                                        <li>
                                            <div class="left-features-box animated out" data-animation="fadeInLeft"
                                                data-delay="0">
                                                <span class="iconbox"><i class="icon-browser"></i></span>
                                                <div class="features-box-content">
                                                    <h6>@localizer["VisionTitle"]</h6>
                                                    <p>@localizer["VisionBody"]</p>
                                                </div> <!-- end features-box-content -->
                                            </div> <!-- end left-features-box -->
                                        </li>
                                        <!-- feature -->
                                        <!-- feature -->
                                        <li>
                                            <div class="left-features-box animated out" data-animation="fadeInLeft"
                                                data-delay="0">
                                                <span class="iconbox"><i class="icon-browser"></i></span>
                                                <div class="features-box-content">
                                                    <h6>@localizer["InternalProceduresTitle"]</h6>
                                                    <p>
                                                        @localizer["InternalProceduresBody"]
                                                    </p>
                                                </div> <!-- end features-box-content -->
                                            </div> <!-- end left-features-box -->
                                        </li>
                                        <!-- feature -->
                                        <li>
                                            <div class="left-features-box animated out" data-animation="fadeInLeft"
                                                data-delay="0">
                                                <span class="iconbox"><i class="icon-hotairballoon "></i></span>
                                                <div class="features-box-content">
                                                    <h6>@localizer["FinancialsTitle"]</h6>
                                                    <p>@localizer["FinancialsBody"]</p>
                                                </div> <!-- end features-box-content -->
                                            </div> <!-- end left-features-box -->
                                        </li>
                                    </ul> <!-- end features-list -->
                                </div>
                            </div> <!-- end col-md-3 -->

                        </div> <!-- end row -->
                    </div> <!-- end container -->
                </div>
            </section>
            <!-- End features-section -->
        </div> <!-- End container -->
    </div> <!-- End landing-offer-section -->
</section>
<!-- End offer section -->

<!-- Team
    ================================================== -->
<section>
    <div id="team-section" class="pad-sec">
        <div class="container">
            <div class="title-section animated out" data-animation="fadeInUp" data-delay="0">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2">
                        <h2>@localizer["PlatformTitle"]</h2>
                        <hr>
                        <p>
                            @localizer["PlatformTitleDesc"]
                        </p>
                    </div>
                </div> <!-- End row -->
            </div> <!-- end title-section -->

            <div class="team-members">
                <div class="row">

                    @foreach (var item in Model)
                    {
                        <!-- member-team -->
                        <div class="col-sm-4">
                            <div class="member-team animated out" data-animation="fadeInLeft" data-delay="0">
                                <a asp-controller="Platform" asp-action="Detail" asp-route-id="@item.PlatformId">
                                    <img src="~/assets/images/platforms/@item.Image" alt="@item.Title">
                                </a>
                                
                                <div class="magnifier">
                                    <div class="magnifier-inner">
                                        <a asp-controller="Platform" asp-action="Detail" asp-route-id="@item.PlatformId">
                                            <h3>
                                                @if(@culture.RequestCulture.UICulture.Name == "en")
                                                {
                                                    @item.Title
                                                }
                                                else {
                                                    @item.TitleAr
                                                }
                                            </h3>
                                        </a>
                                        
                                        <a asp-controller="Platform" asp-action="Detail" asp-route-id="@item.PlatformId">
                                            @if(culture.RequestCulture.UICulture.Name == "en")
                                            {
                                                <p>@item.Summury</p>
                                            }
                                            else{
                                                <p>@item.SummuryAr</p>
                                            }
                                        </a>
                                        
                                        
                                    </div> <!-- End magnifier-inner -->
                            </div> <!-- End magnifier -->
                        </div> <!-- End member-team -->
                    </div> <!-- End col-sm-4 -->
                    }

                </div> <!-- End col-sm-4 -->
            </div>
        </div> <!-- End team-members -->
    </div> <!-- End container -->
    </div> <!-- End team-section -->
</section>
<!-- End team section -->
